<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true">

    <View
        android:id="@+id/survey1_rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        />


    <Button
        android:id="@+id/like"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="찜"
        />

    <Button
        android:id="@+id/etc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:text="효능보기"
        />



    <RelativeLayout
        android:id="@+id/some_id2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToOutline="true">

        <ImageButton
            android:id="@+id/survey4_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_arrow_back_24" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="17dp"
            />

        <RelativeLayout
            android:id="@+id/some_id_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:srcCompat="?android:attr/galleryItemBackground"
                android:layout_marginTop="70dp"
                />

            <ScrollView
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginTop="370dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회사명 >"
                        android:textColor="#adb5bd"
                        android:background="#00ff0000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:text="제품명"
                        />

                    <View
                        android:id="@+id/survey1_rectangle_2"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="#e9ecef"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_view"
                            />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회사명"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="5dp"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="제품수"
                            android:layout_marginLeft="60dp"
                            android:layout_marginTop="25dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수량"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="25dp"
                            />

                    </RelativeLayout>

                    <View
                        android:id="@+id/survey1_rectangle_3"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_alignParentBottom="true"
                        android:background="#e9ecef"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상품정보"
                        android:gravity="center_horizontal"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:tooltipText="제품정보 사진 업로드"
                        android:background="@drawable/light"
                        />

                </LinearLayout>

            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>



    </RelativeLayout>

</LinearLayout>